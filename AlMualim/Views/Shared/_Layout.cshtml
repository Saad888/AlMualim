<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlMualim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <header>
        <nav class="navigation">
            <div class="nav-container">
                <div class="nav-selection">
                    <a asp-controller="Surah" asp-action="Index"></a>
                    <div class="nav-text">SURAHS</div>
                </div>
                <div class="nav-selection">
                    <a asp-controller="Topics" asp-action="Index"></a>
                    <div class="nav-text">TOPICS</div>
                </div>
                <div class="nav-selection"> 
                    <a asp-controller="Search" asp-action="Index"></a>
                    <div class="nav-text">SEARCH</div>
                </div>
                <div class="nav-selection">
                    <a href=javascript:void(0);></a>
                    <div class="nav-text">ABOUT</div>
                </div>
            </div>
        </nav>

